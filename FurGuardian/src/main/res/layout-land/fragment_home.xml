<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title or Header -->
    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Pet Image or Icon  -->
    <ImageView
        android:id="@+id/home_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/welcomguardian"
    app:layout_constraintTop_toBottomOf="@id/home_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="24dp" />

    <!-- Pet Status or Info Section -->
    <TextView
        android:id="@+id/home_pet_status_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pet's Heart Rate: 85 BPM"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/home_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/home_pet_status_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pet's Activity Level: Moderate"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/home_pet_status_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/home_pet_status_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feeding Status: Fed 2 hours ago"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/home_pet_status_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Additional Info or Action Button -->
    <Button
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Full Pet Status"
        app:layout_constraintTop_toBottomOf="@id/home_pet_status_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
