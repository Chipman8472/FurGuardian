<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Emergency Contact Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Vet Contact Info -->
        <TextView
            android:id="@+id/textVetContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vet: Dr. John Smith"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textVetPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: (123) 456-7890"
            android:layout_marginTop="4dp" />

        <!-- Emergency Hospital Info -->
        <TextView
            android:id="@+id/textHospitalContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Hospital: Animal Care Hospital"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textHospitalPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: (098) 765-4321"
            android:layout_marginTop="4dp" />

        <!-- Other Contacts if needed -->

    </LinearLayout>
</ScrollView>
