<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Record Date -->
        <TextView
            android:id="@+id/recordDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2023-11-01"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <!-- Record Type -->
        <TextView
            android:id="@+id/recordTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Vaccination"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />

        <!-- Record Details -->
        <TextView
            android:id="@+id/recordDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details: Rabies booster administered."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Delete Record Button -->
        <Button
            android:id="@+id/deleteRecordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Record"
            android:textColor="@color/red"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:padding="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
