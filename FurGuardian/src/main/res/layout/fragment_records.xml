<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E2C4"
    android:padding="16dp"
    tools:context=".ui.records.RecordsFragment">

    <!-- Top Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Bottom Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Text for Feeding Schedule -->
    <TextView
        android:id="@+id/textRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_feeding_schedule"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
    android:layout_marginTop="16dp" />

    <!-- ImageView Section -->
    <ImageView
        android:id="@+id/image_header"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/record"
        app:layout_constraintTop_toBottomOf="@id/textRecords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Time Input Field -->
    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/time"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_header"
        android:layout_marginTop="16dp" />

    <!-- Meal Type Input Field -->
    <EditText
        android:id="@+id/editTextMealType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/meal"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTime"
        android:layout_marginTop="16dp" />

    <!-- Notes Input Field -->
    <EditText
        android:id="@+id/editTextNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/notes_optional"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextMealType"
        android:layout_marginTop="16dp" />

    <!-- Add Schedule Button -->
    <Button
        android:id="@+id/buttonAddSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_schedule"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#A67C55"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNotes"
        android:layout_marginTop="24dp" />

    <!-- Feeding Schedule Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAddSchedule"
        android:layout_marginTop="24dp">

        <!-- Feeding Schedule Text -->
        <TextView
            android:id="@+id/textFeedingSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/schedule"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Show Past Records Button -->
    <Button
        android:id="@+id/buttonShowLogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show_past_records"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#A67C55"
        android:padding="16dp"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
    android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
