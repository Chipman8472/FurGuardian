<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:padding="24dp">

    <!-- Meal Selection -->
    <TextView
        android:id="@+id/tvMealLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select meal time:"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/radioGroupMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvMealLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbMeal1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time 1"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbMeal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time 2"/>

        <RadioButton
            android:id="@+id/rbMeal3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time 3"/>
    </RadioGroup>

    <!-- Current selected times display -->
    <TextView
        android:id="@+id/tvCurrentTimesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current set times:"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupMeals"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvMeal1Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 1: Not set"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTimesLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvMeal2Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 2: Not set"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvMeal1Time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvMeal3Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 3: Not set"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvMeal2Time"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 24-Hour Time Picker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMeal3Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Set Current Meal Time Button -->
    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set Selected Time"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <!-- Save All Times Button -->
    <Button
        android:id="@+id/btnSaveAllTimes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save All Times"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>